<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <tk.ubublik.huffmancoding.TreeRendererView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ccc"
        app:branchColor="@android:color/holo_green_dark"
        app:branchThickness="2dp"
        app:charLeafColor="@android:color/holo_blue_light"
        app:leafSize="20dp"
        app:textSize="18sp"
        app:nitLeafColor="@android:color/holo_red_light"
        app:nullLeafColor="@android:color/darker_gray" />

</FrameLayout>
